<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bigranch.android.shoppingcart.SignUp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="91dp"
        android:layout_height="32dp"
        android:layout_alignTop="@+id/reg_username"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="26dp"
        android:layout_toStartOf="@+id/reg_username"
        android:text="Name"
        android:textSize="15sp"
        tools:text="Name" />

    <EditText
        android:id="@+id/reg_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="22dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textSize="17sp"
        tools:text="Name" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="163dp"
        android:text="Mobile Number"
        android:textSize="15sp"
        tools:text="Mobile Number" />

    <EditText
        android:id="@+id/reg_mobilephone"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_below="@+id/reg_username"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="-3dp"
        android:layout_toEndOf="@+id/textView4"
        android:ems="10"
        android:inputType="phone" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="215dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/reg_emailid"
        android:text="Email "
        android:textSize="15sp"
        tools:text="Email" />

    <EditText
        android:id="@+id/reg_emailid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reg_pwd"
        android:layout_alignStart="@+id/reg_username"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="7dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/reg_password1"
        android:layout_width="83dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="267dp"
        android:text="Password "
        android:textSize="15sp"
        tools:text="Password " />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="101dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="39dp"
        android:layout_marginBottom="197dp"
        android:text="Confirm Passoword"
        android:textSize="15sp"
        tools:text="Confirm Passoword" />

    <EditText
        android:id="@+id/reg_confirmpassowrd"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_above="@+id/reg_sighnup"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="158dp"
        android:layout_marginTop="325dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="33dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/reg_sighnup"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-99dp"
        android:layout_marginBottom="113dp"
        android:text="Sign Up"
        android:textSize="20sp"
        tools:text="Sign Up" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reg_username"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="118dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="-35dp"
        android:text="Sign up Page "
        android:textSize="20sp"
        tools:text="Sign up Page " />

    <EditText
        android:id="@+id/reg_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/reg_password1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="154dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="-9dp"
        android:ems="10"
        android:inputType="textPassword" />


</RelativeLayout>