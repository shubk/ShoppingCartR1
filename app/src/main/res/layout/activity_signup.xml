<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- tools:context="com.bigranch.android.shoppingcart.SignUp" -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="91dp"
        android:layout_height="32dp"
        android:layout_alignTop="@+id/reg_username"
        android:layout_alignParentStart="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="15dp"
        android:text="Name"
        android:textSize="15sp"
        tools:text="Name" />

    <EditText
        android:id="@+id/reg_username"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="100dp"
        android:text="Mobile Number"
        android:textSize="15sp"
        tools:text="Mobile Number" />

    <EditText
        android:id="@+id/reg_mobilephone"
        android:layout_width="214dp"
        android:layout_height="45dp"
        android:layout_below="@+id/reg_username"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/textView4"
        android:ems="10"
        android:inputType="phone" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="104dp"
        android:layout_height="31dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="162dp"
        android:text="Email "
        tools:text="Email"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/reg_emailid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/reg_username"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/reg_password1"
        android:layout_width="83dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="218dp"
        android:text="Password "
        tools:text="Password "
        android:textSize="15sp"/>



    <TextView
        android:id="@+id/textView7"
        android:layout_width="123dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="39dp"
        android:layout_marginBottom="204dp"
        android:text="Confirm Passoword"
        android:textSize="15sp"
        tools:text="Confirm Passoword" />

    <EditText
        android:id="@+id/reg_confirmpassowrd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="154dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="197dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/reg_sighnup"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-99dp"
        android:layout_marginBottom="113dp"
        android:text="Sign Up"
        android:textSize="20sp"
        tools:text="Sign Up" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reg_username"
        android:layout_marginBottom="-35dp"
        android:layout_toEndOf="@+id/reg_password1"
        android:text="Sign up Page "
        android:textSize="20sp"
        tools:text="Sign up Page " />

    <EditText
        android:id="@+id/reg_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/reg_password1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="151dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="0dp"
        android:ems="10"
        android:inputType="textPassword" />


</RelativeLayout>